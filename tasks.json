{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "-EHsc",
                "-Zi",
                "-I",
                "${workspaceFolder}/headers",
                "-Fe'lifesim.exe'",
                "-Fo${workspaceFolder}/obj/",
                "${workspaceFolder}/sources/*.cpp",
            ],
            "group":  {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
